  "description": "The Intel Edison Connectivity Framework (IECF) allows Edison devices to discover and communicate with each other",
  "main": "lib/main.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha -R Spec -t 3000 -S; echo Done.",
    "gendocs": "./node_modules/.bin/jsdoc . -c jsdoc-conf.json README.md; echo Done.",
    "coverage": "./node_modules/.bin/istanbul cover --report html node_modules/.bin/_mocha -- -R Spec -t 3000 -S; echo Done."
  },
  "engines": {
    "node": ">=0.10.28"
  },
  "repository": "",
  "dependencies": {
    "mdns2" : ">=2.1.3",
    "mqtt": ">=0.3.8",
    "zmq": ">=2.6.0"
  },
  "devDependencies": {
    "chai": "*",
    "mocha": "*",
    "jsdoc": "<=3.3.0",
    "istanbul": "*"
  },
  "keywords": [
    "distributed",
    "discovery",
    "networking",
    "communication"
  ],
